#include<iostream>
using namespace std;
class student
{
	public:
	int english,maths,physics,chemistry,biology;
	student(int a,int b,int c,int d,int e)
	{
		english=a;
		maths=b;
		physics=c;
		chemistry=d;
		biology=e;
	};
};

int main()
{
	int english,maths,physics,chemistry,biology;
    student meera(100,90,100,50,40);
    cout<<"The english mark of meera is "<<meera.english<<"\n";
	cout<<"The mathematics mark of meera is "<<meera.maths<<"\n";
	cout<<"The physics mark of meera is "<<meera.physics<<"\n";
	cout<<"The chemistry mark of meera is "<<meera.chemistry<<"\n";
	cout<<"The biology mark of meera is "<<meera.biology<<"\n";
    return 0;
   	
}

************************************************************************************************************************************************************


#include<iostream>
using namespace std;
class fruit
{
	public:
		string taste,size,colour,season;
		string a,b,c,d;
		fruit(string a,string b,string c,string d)
		{
			taste=a;
			size=b;
			colour=c;
			season=d;
		};
		int display(string a,string b,string c,string d);
};

int fruit :: display(string a,string b,string c,string d)
{
	
	cout<<"The tatse of the fruit is :"<<taste<<"\n";
	cout<<"The size of the fruit is :"<<size<<"\n";
	cout<<"The colour of the fruit is :"<<colour<<"\n";
    cout<<"The season during which the fruit is obtained :"<<season<<"\n";
    return 0;
}

int main()
{
	string a,b,c,d;
	fruit mango("Sweet","medium","Yellow","summer");
	fruit watermelon("sweet","large","green","summer");
	cout<<"The description of the fruit Mango is :"<<"\n";
	cout<<"\n";
	mango.display(a,b,c,d);
	cout<<"\n";
	cout<<"**********************************************";
	cout<<"\n";
	cout<<"\n";
	cout<<"The description of the fruit Mango is :"<<"\n";
	cout<<"\n";
	watermelon.display(a,b,c,d);
	return 0;
}
